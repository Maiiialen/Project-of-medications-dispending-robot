<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity1">

    <TextView
        android:id="@+id/tekst_dawki"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/spinner_dawki"
        android:layout_toLeftOf="@+id/spinner_dawki"
        android:text="Dzienna ilość dawek" />

    <TextView
        android:id="@+id/tekst_godziny1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tekst_dawki"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/spinner_godzina1"
        android:layout_toLeftOf="@+id/spinner_godzina1"
        android:text="Godzina alarmu pierwszego" />

    <TextView
        android:id="@+id/tekst_godziny2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tekst_godziny1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/spinner_godzina2"
        android:layout_toLeftOf="@+id/spinner_godzina2"
        android:text="Godzina alarmu drugiego (opcjonalne)" />

    <TextView
        android:id="@+id/tekst_godziny3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tekst_godziny2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/spinner_godzina3"
        android:layout_toLeftOf="@+id/spinner_godzina3"
        android:text="Godzina alarmu trzeciego (opcjonalne)" />

    <Spinner
        android:id="@+id/spinner_dawki"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" />

    <Spinner
        android:id="@+id/spinner_godzina1"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/spinner_dawki"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" />

    <Spinner
        android:id="@+id/spinner_godzina2"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/spinner_godzina1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" />

    <Spinner
        android:id="@+id/spinner_godzina3"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/spinner_godzina2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" />


</RelativeLayout>